<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/purchasesLayoutContainer"

    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:text="25"
        android:padding="10dp"
        android:id="@+id/dayOfTheMonth"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:id="@+id/purchaseImage"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation ="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:id="@+id/dayOfTheWeek"
            android:textColor="@android:color/black"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="November 2015"
            android:textSize="15sp"
            android:id="@+id/dateMonthYear"
            />

    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-140"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:id="@+id/spent"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/days_adapter_item_padding"
        />
    </LinearLayout>

</LinearLayout>